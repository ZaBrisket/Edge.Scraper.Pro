  "dependencies": {
    "jsdom": "^26.1.0",
    "bottleneck": "^2.19.5",
    "csv-parser": "^3.2.0",
    "exceljs": "^4.4.0",
    "pino": "^8.15.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "eslint": "^9.35.0",
    "jest": "^30.1.3",
    "http-server": "^14.1.1",
    "netlify-cli": "^17.0.0"
  }
}