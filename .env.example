# Universal scraper configuration
HTTP_MAX_RETRIES=5
HTTP_BASE_BACKOFF_MS=3000
HTTP_MAX_BACKOFF_MS=60000
HTTP_DEADLINE_MS=30000

# Proxy configuration (optional, for sites requiring it)
PROXY_URL=

# PR Wire Services
HOST_LIMIT__www_prnewswire_com__RPS=0.3
HOST_LIMIT__www_prnewswire_com__BURST=1
HOST_LIMIT__www_businesswire_com__RPS=0.25
HOST_LIMIT__www_businesswire_com__BURST=1

# Business Intelligence
HOST_LIMIT__www_cbinsights_com__RPS=0.2
HOST_LIMIT__www_cbinsights_com__BURST=1

# Major News
HOST_LIMIT__www_reuters_com__RPS=0.3
HOST_LIMIT__www_reuters_com__BURST=2
HOST_LIMIT__www_bloomberg_com__RPS=0.15
HOST_LIMIT__www_bloomberg_com__BURST=1
HOST_LIMIT__www_wsj_com__RPS=0.15
HOST_LIMIT__www_wsj_com__BURST=1

# Trade Publications
HOST_LIMIT__www_insurancejournal_com__RPS=0.2
HOST_LIMIT__www_insurancejournal_com__BURST=1

# Default for unknown sites
DEFAULT_RPS=0.5
DEFAULT_BURST=2