{
  "$id": "trivia_v1.player.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["player_id", "full_name", "pos"],
  "properties": {
    "player_id": {
      "type": "string",
      "pattern": "^[a-z0-9_]+$",
      "description": "Unique slugified player identifier"
    },
    "full_name": {
      "type": "string",
      "minLength": 1,
      "description": "Player's full name"
    },
    "pos": {
      "type": "string",
      "enum": ["QB", "RB", "WR", "TE"],
      "description": "Primary position"
    },
    "college": {
      "type": ["string", "null"],
      "description": "College attended"
    },
    "birthdate": {
      "type": ["string", "null"],
      "format": "date",
      "description": "Birth date in ISO format"
    },
    "fun_fact": {
      "type": ["string", "null"],
      "description": "Optional fun fact about the player"
    }
  },
  "additionalProperties": false
}